<odoo>
    <record id="action_report_saleorder" model="ir.actions.report">
        <field name="name">Offre de prix Locasix</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">locasix.locasix_quote_report</field>
        <field name="report_file">locasix.locasix_quote_report</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="locasix.paperformat_quote"/>
    </record>

    <template id="locasix_quote_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="locasix.locasix_quote_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="locasix_quote_report_document">
        <t t-call="web.basic_layout">
            <div class="page">
                <span>YO</span>
            </div>
        </t>
    </template>
    
</odoo>