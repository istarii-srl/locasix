<odoo>
    <template id="locasix.locasix_quote_report_document_2">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <link href="/locasix/static/locasix.css" rel="stylesheet"/>
                    <div class="header not-first-page">
                        <img src="/locasix/static/img/locasix_header.png" style="max-height: 90px; padding-top: 15px;"/>
                    </div>
                    <t t-call="locasix.locasix_front_page"/>
                    <t t-call="locasix.locasix_body"/>
                    <t t-call="locasix.additional_conditions"/>
                    <t t-call="locasix.technical_files"/>
                    <t t-call="locasix.plan_files"/>
                    <t t-call="locasix.cgv"/>
                    <div class="footer not-first-page">
                        <img src="/locasix/static/img/locasix_footer.png" style="max-width: 850px; padding-bottom: 20px;"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="locasix_front_page">
        <div class="page row font-treble" style="padding: 0px 15px 0px 15px !important; margin: 0px !important; font-size: 11px;">
            <div class="col" style="width: 235px !important; height: 1085px !important; padding: 0px !important;">
                <img src="/locasix/static/img/locasix_lateral_bar.png" style="max-height: 1085px;"/>
            </div>
            <div class="col" style="width: 635px !important; height: 1085px !important; padding-left: 35px !important;">
                <div style="height: 60px;"/>
                <div style="height: 3px; width: 40px; background-color: rgb(210, 40, 50); border-radius: 30px;"/>
                <div style="height: 15px;"/>
                <h2>OFFRE DE 
                    <br/>PRIX
                </h2>
                <div style="height: 85px;"/>
                <div class="row">
                    <div style="width: 15px;"/>
                    <div style="width: 290px; border: 1px solid black; padding: 15px 8px 15px 8px;">
                        <span>
                            Nicolas Six Units <br/>
                            Rue de Tournai 192 <br/>
                            7330 Stambruges <br/>
                            0472 92 90 15 <br/>
                            BE0719889755 <br/>
                        </span>
                    </div>
                    <div style="width: 10px;"/>
                    <div style="width: 290px; border: 1px solid black; padding: 15px 8px 15px 8px;">
                        <div class="row" style="margin: 0px !important;"><span>Numéro d'offre : </span><span t-field="doc.name"/></div>
                        <div class="row" style="margin: 0px !important;"><span>Votre référence : </span></div>
                        <div class="row" style="margin: 0px !important;"><span>Date de l'offre : </span><span t-field="doc.date_order"  t-options='{"widget": "date"}'/></div>
                        <div class="row" style="margin: 0px !important;"><span>Votre contact : </span></div>
                    </div>
                </div>
                <div style="height: 75px;"/>
                <div style="height: 455px;">
                    <span t-raw="doc.front_page_body"/>
                </div>
                <div style="height: 100px; margin-left: -25px;">
                    <img src="/locasix/static/img/locasix_bottom_bar.png" style="max-height: 200px;"/>
                </div>
            </div>
        </div>
    </template>

    <template id="locasix_body">
        <div class="page font-calibri" style="padding: 20px 15px 20px 15px !important; margin: 0px !important; page-break-after: always; font-size: 11px;">
            <div class="row">
                <div class="col-5" style="font-size: 11px;">
                    <div style="height:42px;"/>
                    <div style="height: 105px; border: 1px solid black; padding: 3px 5px 3px 5px;">
                        Nicolas Six Units <br/>
                        Rue de Tournai 192 <br/>
                        7330 Stambruges <br/>
                        Nicolas Six <br/>
                        0472 92 90 15 <br/>
                        BE0719889755 <br/>
                    </div>
                </div>
                <div class="col-7" style="font-size: 11px;">
                    <div style="border: 1px solid black; padding: 3px 5px 3px 5px; text-align:center;">
                        <span style="font-size: 15px;">Offre</span>
                    </div>
                    <div style="height:10px;"/>
                    <div style="height: 105px; border: 1px solid black; padding: 3px 5px 3px 5px;">
                        <div class="row" style="margin: 0px !important;"><span>Numéro d'offre : </span><span t-field="doc.name"/></div>
                        <div class="row" style="margin: 0px !important;"><span>Votre référence : </span></div>
                        <div class="row" style="margin: 0px !important;"><span>Date de l'offre : </span><span t-field="doc.date_order"  t-options='{"widget": "date"}'/></div>
                        <div class="row" style="margin: 0px !important;"><span>Votre contact : </span></div>
                    </div>
                </div>
            </div>
            <t t-set="section_lines" t-value="doc.get_sections()"/>
            <t t-foreach="section_lines" t-as="section_line">
                <div style="font-size: 15px; padding-top: 50px; padding-bottom: 20px;">
                    <span t-field="section_line.name"/>
                </div>
                <t t-if="section_line.get_section_type() == 'prix_fixe'">
                    <t t-set="first_column_name" t-value="'Article'"/>
                    <t t-set="price_column_name" t-value="'Prix'"/>
                    <t t-set="column_names_n_lines" t-value="1"/>
                    <t t-set="column_names_second_line" t-value="[]"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_fixed_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() == 'prix_mois'">
                    <t t-set="first_column_name" t-value="'Article'"/>
                    <t t-set="price_column_name" t-value="'Prix / mois'"/>
                    <t t-set="column_names_n_lines" t-value="1"/>
                    <t t-set="column_names_second_line" t-value="[]"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_fixed_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() == 'prix_jour'">
                    <t t-set="first_column_name" t-value="'Article'"/>
                    <t t-set="price_column_name" t-value="'Prix / jour calendrier'"/>
                    <t t-set="column_names_n_lines" t-value="1"/>
                    <t t-set="column_names_second_line" t-value="[]"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_fixed_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() in ['prix_jour_8', 'prix_jour_double']">
                    <t t-set="first_column_name" t-value="'Article'"/>
                    <t t-set="price_column_name" t-value="'Prix / jour calendrier'"/>
                    <t t-set="column_names_n_lines" t-value="2"/>
                    <t t-set="column_names_second_line" t-value="['8h/jour']"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_fixed_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() in ['prix_jour_24', 'prix_jour_double']">
                    <t t-set="first_column_name" t-value="'Article'"/>
                    <t t-set="price_column_name" t-value="'Prix / jour calendrier'"/>
                    <t t-set="column_names_n_lines" t-value="2"/>
                    <t t-set="column_names_second_line" t-value="['24/24h']"/>
                    <t t-set="coefficient" t-value="2"/>
                    <t t-call="locasix.locasix_fixed_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() == 'prix_3'">
                    <t t-set="column_names_n_lines" t-value="1"/>
                    <t t-set="column_names_second_line" t-value="[]"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_three_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() in ['prix_3_8', 'prix_3_double']">
                    <t t-set="column_names_n_lines" t-value="2"/>
                    <t t-set="column_names_second_line" t-value="['8h/jour', '40h/semaine', '180h/mois']"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_three_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() in ['prix_3_24', 'prix_3_double']">
                    <t t-set="column_names_n_lines" t-value="2"/>
                    <t t-set="column_names_second_line" t-value="['24/24h', '24/24h', '24/24h']"/>
                    <t t-set="coefficient" t-value="2"/>
                    <t t-call="locasix.locasix_three_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() == 'prix_6'">
                    <t t-set="column_names_n_lines" t-value="1"/>
                    <t t-set="column_names_before_first_line" t-value="['', '', ''] + doc.get_discount_rates()"/>
                    <t t-set="column_names_second_line" t-value="[]"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_six_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() in ['prix_6_8', 'prix_6_double']">
                    <t t-set="column_names_n_lines" t-value="2"/>
                    <t t-set="column_names_before_first_line" t-value="['', '', ''] + doc.get_discount_rates()"/>
                    <t t-set="column_names_second_line" t-value="['8h/jour', '40h/semaine', '180h/mois', '', '', '']"/>
                    <t t-set="coefficient" t-value="1"/>
                    <t t-call="locasix.locasix_six_price_section"/>
                </t>
                <t t-if="section_line.get_section_type() in ['prix_6_24', 'prix_6_double']">
                    <t t-set="column_names_n_lines" t-value="2"/>
                    <t t-set="column_names_before_first_line" t-value="['', '', ''] + doc.get_discount_rates()"/>
                    <t t-set="column_names_second_line" t-value="['24/24h', '24/24h', '24/24h', '24/24h', '24/24h', '24/24h']"/>
                    <t t-set="coefficient" t-value="2"/>
                    <t t-call="locasix.locasix_six_price_section"/>
                </t>
            </t>
        </div>
    </template>

    <template id="locasix_fixed_price_section">
        <table style="width: 100%">
            <tr style="font-weight: bold; text-align: center;">
                <th width="8%"><span t-esc="first_column_name"/></th>
                <th width="40%">Description</th>
                <th width="7%">Qté</th>
                <th width="45%">
                    <div class="col">
                        <span class="block" t-esc="price_column_name"/>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[0]"/>
                    </div>
                </th>
            </tr>
            <tbody>
            <t t-foreach="doc.retrieve_lines_from_section_without_id(section_line)" t-as="line">
                <tr t-if="not line.is_section" class="space_above">
                    <td width="8%" class="text-center">
                        <span t-field="line.product_id.default_code"/>
                    </td>
                    <td width="40%" class="text-left">
                        <span t-field="line.product_id.name"/>
                        <br/>
                        <span class="small-italic" t-field="line.product_id.description"/>
                        <a target="_blank" class="small-italic underlined" t-if="line.product_id.has_ref_to_condi" t-attf-href="{{line.product_id.more_details_link}}"><br/>Plus de détails</a> 
                    </td>
                    <td width="7%" class="text-center">
                        <span t-esc="str(int(line.product_uom_qty))"/>
                    </td>
                    <td width="45%" class="text-center">
                        <div t-if="line.price_unit != 0">
                            <span t-esc="line.price_unit * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </div>
                        <div t-if="line.price_unit == 0">
                            <span class="reduction text-center">Offert !</span>
                        </div>
                    </td>
                </tr>
            </t>
            </tbody>
        </table>
    </template>

    <template id="locasix_three_price_section">
        <table style="width: 100%">
            <tr style="font-weight: bold; text-align: center;">
                <th width="8%">Article</th>
                <th width="40%">Description</th>
                <th width="7%">Qté</th>
                <th width="15%">
                    <div class="col">
                        <span class="block">Prix/jour</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[0]"/>
                    </div>
                </th>
                <th width="15%">
                    <div class="col">
                        <span class="block">Prix/semaine</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[1]"/>
                    </div>
                </th>
                <th width="15%">
                    <div class="col">
                        <span class="block">Prix/mois</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[2]"/>
                    </div>
                </th>
            </tr>
            <tbody>
            <t t-foreach="doc.retrieve_lines_from_section_without_id(section_line)" t-as="line">
                <tr t-if="not line.is_section" class="space_above">
                    <td width="8%" class="text-center">
                        <span t-field="line.product_id.default_code"/>
                    </td>
                    <td width="40%" class="text-left">
                        <span t-field="line.product_id.name"/>
                        <br/>
                        <span class="small-italic" t-field="line.product_id.description"/>
                        <a target="_blank" class="small-italic underlined" t-if="line.product_id.has_ref_to_condi" t-attf-href="{{line.product_id.more_details_link}}"><br/>Plus de détails</a> 
                    </td>
                    <td width="7%" class="text-center">
                        <span t-esc="str(int(line.product_uom_qty))"/>
                    </td>
                    <t t-if="line.day_price != 0">
                        <td width="15%" class="text-center">
                            <span t-esc="line.day_price * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="15%" class="text-center">
                            <span t-esc="line.week_price * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="15%" class="text-center">
                            <span t-esc="line.month_price * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                    </t>
                    <t t-if="line.day_price == 0">
                        <td colspan="3" class="text-center">
                            <span class="reduction text-center">Offert !</span>
                        </td>
                    </t>
                </tr>
            </t>
            </tbody>
        </table>
    </template>

    <template id="locasix_six_price_section">
        <table style="width: 100%; padding-bottom: 20px;">
            <tr style="font-weight: bold; text-align: center;">
                <th width="8%"><br/>Article</th>
                <th width="25%"><br/>Description</th>
                <th width="7%"><br/>Qté</th>
                <th width="10%">
                    <div class="col">
                        <span class="block reduction"><br/></span>
                        <span class="block">Prix/jour</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[0]"/>
                    </div>
                </th>
                <th width="10%">
                    <div class="col">
                        <span class="block reduction"><br/></span>
                        <span class="block">Prix/semaine</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[1]"/>
                    </div>
                </th>
                <th width="10%">
                    <div class="col">
                        <span class="block reduction"><br/></span>
                        <span class="block">Prix/mois</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[2]"/>
                    </div>
                </th>
                <th width="10%">
                    <div class="col">
                        <span class="block reduction" t-esc="column_names_before_first_line[3]"/>
                        <span class="block">Prix/mois</span>
                        <span class="block small-italic">Min. 2 mois</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[3]"/>
                    </div>
                </th>
                <th width="10%">
                    <div class="col">
                        <span class="block reduction" t-esc="column_names_before_first_line[4]"/>
                        <span class="block">Prix/mois</span>
                        <span class="block small-italic">Min. 3 mois</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[4]"/>
                    </div>
                </th>
                <th width="10%">
                    <div class="col">
                        <span class="block reduction" t-esc="column_names_before_first_line[5]"/>
                        <span class="block">Prix/mois</span>
                        <span class="block small-italic">Min. 6 mois</span>
                        <span class="block small-italic" t-if="column_names_n_lines > 1" t-esc="column_names_second_line[5]"/>
                    </div>
                </th>
            </tr>
            <tbody>
            <t t-foreach="doc.retrieve_lines_from_section_without_id(section_line)" t-as="line">
                <tr t-if="not line.is_section" class="space_above">
                    <td width="8%" class="text-center">
                        <span t-field="line.product_id.default_code"/>
                    </td>
                    <td width="25%" class="text-left">
                        <span t-field="line.product_id.name"/>
                        <br/>
                        <span class="small-italic" t-field="line.product_id.description"/>
                        <a target="_blank" class="small-italic underlined" t-if="line.product_id.has_ref_to_condi" t-attf-href="{{line.product_id.more_details_link}}"><br/>Plus de détails</a> 
                    </td>
                    <td width="7%" class="text-center">
                        <span t-esc="str(int(line.product_uom_qty))"/>
                    </td>
                    <t t-if="line.day_price != 0">
                        <td width="10%" class="text-center">
                            <span t-esc="line.day_price * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="10%" class="text-center">
                            <span t-esc="line.week_price * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="10%" class="text-center">
                            <span t-esc="line.month_price * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="10%" class="text-center">
                            <span t-esc="line.months_2_discount * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="10%" class="text-center">
                            <span t-esc="line.months_3_discount * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                        <td width="10%" class="text-center">
                            <span t-esc="line.months_6_discount * coefficient" t-options='{"widget": "monetary", "display_currency": doc.company_id.currency_id}'/>
                            <span> HT</span>
                        </td>
                    </t>
                    <t t-if="line.day_price == 0">
                        <td colspan="6" class="text-center">
                            <span class="reduction text-center">Offert !</span>
                        </td>
                    </t>
                </tr>
            </t>
            </tbody>
        </table>
    </template>

    <template id="additional_conditions">
        <div class="page font-calibri" style="padding: 0px 15px 20px 15px !important; margin: 0px !important; font-size: 11px;">
            <div class="col">
                <div style="padding-bottom: 50px;">
                    <span style="font-size: 16px; font-weight:500;">Conditions additionnelles</span>
                </div>
                <div style="height: 750px;"><p style="font-size:10px;" t-field="doc.added_terms"/></div>
                <div style="height: 200px; width: 100%; border: 1px solid black; padding: 15px 8px 15px 8px;">
                    <span style="font-weight: bold;">Confirmation de la commande : <br/><br/></span>
                    <span style="font-size: 10px;">Veuillez nous retourner toutes les pages de l'offre paraphées ainsi que cette page signée avec la mention<br/></span>
                    <span style="font-size: 10px;">"Bon pour accourd" + le cachet de l'entreprise.</span>
                </div>
            </div>
        </div>
    </template>

    <template id="technical_files">
        <t t-foreach="doc.order_line" t-as="line">
            <t t-if="line.product_id">
                <t t-foreach="line.product_id.technical_ids" t-as="technical_id">
                    <div class="page appendix">
                        <img class="appendix" t-att-src="image_data_uri(technical_id.image_1920)"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="plan_files">
        <t t-foreach="doc.order_line" t-as="line">
            <t t-if="line.product_id">
                <t t-foreach="line.product_id.plan_ids" t-as="plan_id">
                    <div class="page appendix">
                        <img class="appendix" t-att-src="image_data_uri(plan_id.image_1920)"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="cgv">
        <div class="page cgv font-calibri">
            <div class="col-12" style="text-align:center; background-color: yellow">
                <span class="text-center cgv-title">CONDITIONS GENERALES DE LOCATION - LOCASIX SA</span>
            </div>
            <div class="row">
                <div class="col-6" style="background-color: red;">
                    <span class="underlined">Article I : Paiement et facturation de la location<br/></span>
