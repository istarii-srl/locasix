<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="locasix.action_export_product_tree">
        <button type="button" class="btn btn-secondary o_button_export_product">
            Exporter
        </button>
    </t>

    <t t-name="locasix.action_import_product_tree">
        <button type="button" class="btn btn-secondary o_button_import_product">
            Importer
        </button>
    </t>

    <t t-extend="ListView.buttons" t-name="ProductTreeButtonsListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-call="locasix.action_export_product_tree"/>
        </t>
        
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-call="locasix.action_import_product_tree"/>
        </t>

    </t>


</templates>