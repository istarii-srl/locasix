<odoo>
    <record model="ir.actions.act_window" id="action_day">
        <field name="name">Allers et retours</field>
        <field name="res_model">locasix.day</field>
        <field name="view_mode">tree,calendar,form</field>
    </record>

    <record model="ir.ui.view" id="locasix_day_tree">
        <field name="name">locasix.day.tree</field>
        <field name="model">locasix.day</field>
        <field name="arch" type="xml">
            <tree string="Allers et retours">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="locasix_day_calendar">
        <field name="name">locasix.day.calendar</field>
        <field name="model">locasix.day</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Calendar View" date_start="day" mode="month" event_limit="5">
                <field name="name" filters="1"/>
                <field name="notes" string="Notes"/>
            </calendar>
        </field>
    </record>


    <record model="ir.ui.view" id="locasix_day_form">
        <field name="name">locasix.day.form</field>
        <field name="model">locasix.day</field>
        <field name="arch" type="xml">
            <form string="Jours">
                <header>
                    <button name="action_previous" type="object" string="Avant" class="oe_highlight"/>
                    <button name="action_next" type="object" string="Après" class="oe_highlight"/>
                </header>
                <header>
                    <button name="action_add_aller" type="object" string="Ajouter un aller" class="oe_highlight"/>
                    <button name="action_add_retour" type="object" string="Ajouter un retour" class="oe_highlight"/>
                </header>
                <sheet style="margin-left: 0px !important; padding-left: 0px !important">
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="ex: Vente Hergé 3"/>
                        </h1>
                    </div>
                    <field name="day"/>
                    <group>
                        <group style="width: 45% !important;">
                            <field name="aller_ids" context="{'tree_view_ref' : 'locasix.locasix_aller_day_tree'}"/>
                        </group>
                        <group style="width: 45% !important;">
                            <field name="retour_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>