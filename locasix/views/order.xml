<odoo>

    <record id="locasix_order_form" model="ir.ui.view">
        <field name="name">locasix.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field eval="8" name="priority"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_draft" position="after">
                <button name="action_compute" string="Ajout automatique" />
                <button name="action_remove_computed_lines" string="Retirer ajout" attrs="{'invisible': [('has_computed', '=', False)]}"/>
            </button>

            <field name="partner_id" position="after">
                <field name="weekend_offer"/>
                <field name="has_computed" invisible="1"/>
            </field>
            <group name="note_group" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>
            <page name="other_information" position="before">
                <page name="front_page" string="Page de garde">
                    <field name="front_page_body"/>
                </page>
                <page name="terms" string="Conditions additionnelles">
                    <field name="added_terms"/>
                </page>
            </page>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="has_ref_to_condi" optional="show"/>
            </xpath>
            <xpath expr="//tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='price_unit']" position="after">
                <field name="day_price" optional="hide"/>
                <field name="week_price" optional="hide"/>
                <field name="month_price" optional="hide"/>
                <field name="months_2_discount" widget="percentage" optional="hide"/>
                <field name="months_3_discount" widget="percentage" optional="hide"/>
                <field name="months_6_discount" widget="percentage" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>