<odoo>

    <record id="locasix_order_form" model="ir.ui.view">
        <field name="name">locasix.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field eval="8" name="priority"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_draft" position="after">
                <field name="done_order" invisible="1"/>
                <button name="action_compute" type="object" string="Ajout automatique" attrs="{'invisible': [('done_order', '=', True)]}"/>
                <button name="action_remove_computed_lines" type="object" string="Retirer ajout" attrs="{'invisible': ['|', ('has_computed', '=', False), ('done_order', '=', True)]}"/>
                <button name="action_compute_insurances" type="object" string="Calcul assurances" attrs="{'invisible': ['|', ('has_computed', '=', False), ('done_order', '=', True)]}"/>
                <button name="action_put_in_agenda" type="object" string="Ajouter Ã  l'agenda" attrs="{'invisible': [('done_order', '=', False)]}"/>
            </button>

            <field name="partner_id" position="after">
                <field name="weekend_offer"/>
                <field name="show_discount_rates"/>
                <field name="usage_rate_display"/>
                <field name="has_computed" invisible="1"/>
            </field>
            <group name="note_group" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>
            <group name="sale_info" position="after">
                <group string="Remises">
                    <field name="months_2_discount_rate" widget="percentage"/>
                    <field name="months_3_discount_rate" widget="percentage"/>
                    <field name="months_6_discount_rate" widget="percentage"/>
                </group>
            </group>
            <page name="other_information" position="before">
                <page name="front_page" string="Page de garde">
                    <field name="front_page_body"/>
                </page>
                <page name="terms" string="Conditions additionnelles">
                    <field name="added_terms"/>
                </page>
            </page>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="has_ref_to_condi" optional="show"/>
                <field name="usage_rate_display" invisible="1"/>
                <field name="has_24_price" optional="show" attrs="{'invisible': [('usage_rate_display', '=', '8')]}"/>
                <field name="temporary_product" optional="hide"/>
            </xpath>
            <xpath expr="//tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='price_unit']" position="after">
                <field name="weekend_offer" invisible = "1"/>
                <field name="is_multi" invisible = "1"/>
                <field name="months_2_discount_rate" invisible="1"/>
                <field name="months_3_discount_rate" invisible="1" />
                <field name="months_6_discount_rate" invisible="1" />
                <field name="day_price" optional="hide" attrs="{'invisible': [('weekend_offer', '=', True)]}" />
                <field name="week_price" optional="hide" attrs="{'invisible': [('weekend_offer', '=', True)]}" />
                <field name="month_price" optional="hide" attrs="{'invisible': [('weekend_offer', '=', True)]}" />
                <field name="months_2_discount" optional="hide" attrs="{'invisible': [('weekend_offer', '=', True)]}" />
                <field name="months_3_discount" optional="hide" attrs="{'invisible': [('weekend_offer', '=', True)]}" />
                <field name="months_6_discount" optional="hide" attrs="{'invisible': [('weekend_offer', '=', True)]}" />
            </xpath>
        </field>
    </record>

</odoo>