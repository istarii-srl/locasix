<odoo>

    <record id="locasix_retour_map_view" model="ir.ui.view">
        <field name="name">locasix.retour.view.map</field>
        <field name="model">locasix.retour</field>
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <map res_partner="address_id" hide_address="False">
                <field name="contract" string="Référence"/>
                <field name="city" string="Ville"/>
                <field name="date" string="Date prévue"/>
            </map>
        </field>
    </record>

    <record model="ir.ui.view" id="locasix_retour_calendar">
        <field name="name">locasix.retour.calendar</field>
        <field name="model">locasix.retour</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Calendar View" date_start="date" color="address_id" mode="month" event_limit="5">
                <field name="address_id" filters="1"/>
                <field name="contract" string="Référence"/>
                <field name="city" string="Ville"/>
                <field name="date" string="Date prévue"/>
            </calendar>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_retour">
        <field name="name">Retours</field>
        <field name="res_model">locasix.retour</field>
        <field name="view_mode">calendar,tree,form,map</field>
        <field name="view_id" ref="locasix.locasix_retour_calendar"/>
    </record>


    <record model="ir.ui.view" id="locasix_retour_tree">
        <field name="name">locasix.retour.tree</field>
        <field name="model">locasix.retour</field>
        <field name="arch" type="xml">
            <tree string="Retours">
                <field name="date"/>
                <field name="address_id"/>
                <field name="city"/>
                <button name="open_agg" string="Modifier" type="object" icon="fa-arrow-circle-o-right"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="locasix_retour_day_tree">
        <field name="name">locasix.retour.day.tree</field>
        <field name="model">locasix.retour</field>
        <field name="arch" type="xml">
            <tree string="Retours">
                <field name="product_id"/>
                <field name="product_unique_ref"/>
                <field name="city"/>
                <field name="remarque_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <button name="open_agg" string="Modifier" type="object" icon="fa-arrow-circle-o-right"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="locasix_retour_form">
        <field name="name">locasix.retour.form</field>
        <field name="model">locasix.retour</field>
        <field name="arch" type="xml">
            <form string="Retour">
                <sheet>
                    <group>
                        <group>
                            <field name="day_id" invisible="1"/>
                            <field name="date"/>
                            <field name="address_id"/>
                            <field name="city"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="remarque_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>