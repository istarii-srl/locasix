<odoo>
    <record id="locasix_duplicate_aller_form" model="ir.ui.view">
        <field name="name">locasix.duplicate.aller.form</field>
        <field name="model">locasix.duplicate.aller</field>
        <field name="arch" type="xml">
            <form string="Dupliquer">
                <field name="new_date"/>
                <field name="aller_type"/>
                <footer>
                    <button name="validate" string="Dupliquer" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>