<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sale_config_views_form" model="ir.ui.view">
            <field name="name">sale.config.views.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='catalog_setting_container']" position="after">
                    <block title="Sale Order Attachment Merge" name="sale_order_attachment_view">
                        <setting id="select_attachement" help=" Select the attachment will be merge ">
                            <field name="sale_merge_report"/>
                            <div invisible = "sale_merge_report == False">
                            	<field name="so_report_template_ids" widget="many2many_tags"/>
                            </div>
                        </setting>
                        <setting invisible = "sale_merge_report == False">
                            <field name="so_merge_report_with_attachments"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>

		
	</data>
</odoo>